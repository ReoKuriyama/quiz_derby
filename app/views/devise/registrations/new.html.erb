<div class="orange">
  <div class="wrap">
    <h1 class="title">
      MFクイズダービー
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field group_name">
          <%= f.label :group_name %>
          <%= f.text_field :group_name, autofocus: true %>
        </div>

        <div class="field hidden">
          <%= f.label :password %>
          <%= f.password_field :password, value: "123456", autocomplete: "new-password" %>
        </div>

        <div class="field hidden">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, value: "123456", autocomplete: "new-password" %>
        </div>

        <div class="actions start_button">
          <%= f.submit "このチーム名で参加する(途中変更はできません)" %>
        </div>
      <% end %>
  </div>
</div>
